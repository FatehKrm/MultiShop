@using MultiShop.DtoLayer.CatalogDtos.FeatureDtos
@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne çıkan ekleme sayfası</h4>
                <hr />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="FeatureId" />
                        <label>Öne çıkan başlığı</label>
                        <input type="text" asp-for="FetureName" class="form-control" />
                        <br />
                        <label>Öne çıkan İkono</label>
                        <input type="text" asp-for="Icon" class="form-control" />
                        <br />
                        <button class="btn btn-primary">Öne çıkanı güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

