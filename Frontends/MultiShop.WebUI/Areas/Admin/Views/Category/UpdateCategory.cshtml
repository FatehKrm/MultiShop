@model MultiShop.DtoLayer.CatalogDtos.CategoryDtos.UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori güncelleme sayfası</h4>
                <hr />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>kategori ID</label>
                        <input type="text" readonly asp-for="CategoryId" class="form-control" />
                        <br />
                        <label>kategori adı</label>
                        <input type="text" asp-for="CategoryName" class="form-control" />
                        <br />
                        <button class="btn btn-primary">Kateoriyi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
